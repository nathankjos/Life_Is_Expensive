<div class="row">
        <div class="col-md-6 offset-md-3">
            <h1><%= @expense.name %></h1>
                <%= form_for @expense do |f| %>
                <div class="form-group">
                  <label>Name of Expense</label>
                  <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                </div>
                <div class="form-group">
                  <label>Amount</label>
                  <%= f.text_field :amount, class: "form-control", placeholder: "Amount" %>
                </div>
                <div class="form-group">
                  <label>Item Type</label>
                  <%= f.text_field :category, class: "form-control", placeholder: "Category" %>
                </div>
                <%= f.submit "Update Expense", class: "btn btn-primary" %>
              <% end %>
            <div class= "deleteBtn"><%= button_to  "Delete Expense", expense_path(@expense.id), method:"delete", data: {confirm: "Delete Expense?"},class: "btn btn-danger"  %></div>            
            </div>
          </div> 