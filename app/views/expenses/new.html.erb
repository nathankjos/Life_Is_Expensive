<h1>Add a New Expense!</h1>
<div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>New Expense</h1>
      <%= form_for @expense do |f| %>
        <div class="form-group">
          <label>What is the expense?</label>
          <%= f.text_field :name, class: "form-control", placeholder: "Expense Name" %>
        </div>
        <div class="form-group">
          <label>How much is it for?</label>
          <%= f.text_field :amount, class: "form-control", placeholder: "Cost" %>
        </div>
        <div class="form-group">
          <label>Type of Expense?</label>
          <%= f.text_field :category, class: "form-control", placeholder: "Category" %>
        </div>
        <%= f.submit "Add Expense", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>