<div class="row">
        <div class="col-md-6 offset-md-3">
          <h1>Edit Profile</h1>
          <%= form_for @user do |f| %>
            <div class="form-group">
              <label>Name</label>
              <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
            </div>
            <div class="form-group">
              <label>Email</label>
              <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <label>Monthly Budget</label>
              <%= f.text_field :budget, class: "form-control", placeholder: "Monthly Budget Amount" %>
            </div>
            <%= f.submit "Update Account", class: "btn btn-primary" %>
            <% end %>
            <div class = "deleteBtn"><%= button_to  "Delete Account", user_path(current_user.id), method:"delete", data: {confirm: "Are you sure you want to delete your account?"},class: "btn btn-danger"  %></div>
          </div>
      </div>
